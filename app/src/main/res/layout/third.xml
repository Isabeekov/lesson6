<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add">

    <RelativeLayout
        android:id="@+id/real"

        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_book" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/ic_library" />
    </RelativeLayout>


    <TextView
        android:id="@+id/kitap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/real"
        android:layout_toRightOf="@id/real"
        android:text="  Koshpendiler"
        android:textColor="@color/project_color"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kitap"
        android:layout_toRightOf="@id/real"
        android:text="   Ilııas Esenberlın"
        android:textColor="@color/project_color"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/autor"
        android:layout_toRightOf="@id/real"
        android:contextClickable="true"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0"

        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/oku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Oku"
        android:textSize="34sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="+"
        android:textSize="34sp"
        android:textStyle="bold" />
</RelativeLayout>