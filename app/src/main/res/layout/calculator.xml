<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_zapis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="right"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="right"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOshiru"
            style="@style/button_func_style"
            android:text="C" />
        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/button_func_style"
            android:text="+/-" />
        <Button
            android:id="@+id/btnpre"
            style="@style/button_func_style"
            android:text="%"/>
        <Button
            android:id="@+id/btnBolu"
            style="@style/button_func_style"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/button_number_style"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            style="@style/button_number_style"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/button_number_style"
            android:text="9"/>
        <Button
            android:id="@+id/btnX"
            style="@style/button_func_style"
            android:text="x"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_number_style"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/button_number_style"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/button_number_style"
            android:text="6"/>
        <Button
            android:id="@+id/btnMinus"
            style="@style/button_func_style"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_number_style"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            style="@style/button_number_style"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            style="@style/button_number_style"
            android:text="3"/>
        <Button
            android:id="@+id/btnPlus"
            style="@style/button_func_style"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/button_number_style"
            android:text="0" />
        <Button
            android:id="@+id/btnNukte"
            style="@style/button_number_style"
            android:text="." />
        <Button
            android:id="@+id/btndel"
            style="@style/button_number_style"
            android:text="del"/>
        <Button
            android:id="@+id/btnTen"
            style="@style/button_func_style"
            android:text="="/>
    </LinearLayout>





</LinearLayout>



